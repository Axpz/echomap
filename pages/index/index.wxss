/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page-body {
  flex: 1;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 底部弹窗容器：固定在底部，默认隐藏在屏幕外 */
.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -12rpx 40rpx rgba(0, 0, 0, 0.05);
  transform: translateY(100%);
  transition: transform 0.35s cubic-bezier(0.2, 0, 0.2, 1);
  pointer-events: auto;
}

/* 显示状态 */
.bottom-sheet--show {
  transform: translateY(0);
}

.bottom-sheet__header {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 抽屉把手 */
.bottom-sheet__header::after {
  content: '';
  width: 60rpx;
  height: 8rpx;
  background: #E5E5E5;
  border-radius: 4rpx;
}

.bottom-sheet-content {
  height: calc(60vh - 60rpx);
  padding: 0 14rpx env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.info-title {
  font-size: 44rpx;
  font-weight: 600;
  margin: 20rpx 0 12rpx;
  color: #1A1A1A;
  line-height: 1.3;
}

.info-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.info-meta-item {
  font-size: 24rpx;
  color: #888;
  background: #F7F7F7;
  padding: 4rpx 16rpx;
  border-radius: 6rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 48rpx;
  margin-bottom: 24rpx;
}

/* 知识库卡片容器 */
.knowledge-card {
  margin-top: 48rpx;
  background: #F7F8FA;
  border-radius: 24rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

/* 卡片内部的标题头 */
.knowledge-card .section-header {
  margin: 0;
  padding: 24rpx 14rpx;
  /* 点击区域更大 */
}

/* 知识库列表 */
.knowledge-list {
  display: flex;
  flex-direction: column;
  padding: 0 14rpx;
  background: #F7F8FA; /* 保持背景一致 */
}

/* 列表项样式调整 */
.knowledge-item {
  padding: 32rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05); /* 更淡的分割线 */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 展开状态下，标题下方加一条分割线 */
.knowledge-card--expanded .section-header {
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.knowledge-item:last-child {
  border-bottom: none;
}

.knowledge-item:active {
  opacity: 0.7;
}

.knowledge-item.matched {
  background: #F0F9F4;
  padding: 32rpx 24rpx;
  border-radius: 16rpx;
  border-bottom: none;
  margin: 32rpx 0;
}

.knowledge-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.matched .knowledge-title {
  color: #07C160;
  font-weight: 600;
}

.icon-arrow-right {
  width: 12rpx;
  height: 12rpx;
  border-right: 3rpx solid #CCC;
  border-bottom: 3rpx solid #CCC;
  transform: rotate(-45deg);
}

.icon-arrow-down {
  width: 12rpx;
  height: 12rpx;
  border-right: 3rpx solid #CCC;
  border-bottom: 3rpx solid #CCC;
  transform: rotate(45deg);
}

/* 小红书风格三列网格 */
.image-waterfall {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 0;
}

.waterfall-item {
  width: calc((100% - 24rpx) / 3); /* 减去两个 gap 的宽度 */
  aspect-ratio: 3 / 4; /* 小红书常用的纵向比例 */
  border-radius: 12rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.waterfall-image {
  width: 100%;
  height: 100%;
  display: block;
}

.waterfall-item:active {
  opacity: 0.9;
  transform: scale(0.98);
}

