/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.page-body {
  flex: 1;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 底部弹窗容器：固定在底部，默认隐藏在屏幕外 */
.bottom-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  background: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.08);
  transform: translateY(100%);
  transition: transform 0.3s ease-out;
  /* 关键：只拦截弹窗区域的点击，不影响上方地图区域 */
  pointer-events: auto;
}

/* 显示状态 */
.bottom-sheet--show {
  transform: translateY(0);
}

.bottom-sheet__header {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.icon-arrow-down {
  width: 20rpx;
  height: 20rpx;
  border-right: 4rpx solid #999;
  border-bottom: 4rpx solid #999;
  transform: rotate(45deg);
  margin-top: -10rpx;
}

.bottom-sheet-content {
  height: calc(60vh - 80rpx);
  padding: 40rpx 8rpx env(safe-area-inset-bottom);
  box-sizing: border-box;
  overflow-y: scroll;
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
}

.info-row {
  font-size: 28rpx;
  color: #666;
  line-height: 2;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #07c160;
  padding-left: 8rpx;
}

.info-image-row {
  margin-top: 32rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 4rpx;
}

.info-image {
  width: calc((100% - 8rpx) / 3);
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}
