.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
  padding: 0;
  align-items: stretch;
  justify-content: flex-start;
}

.content-scroll {
  flex: 1;
  overflow: hidden;
}

.article-content {
  padding: 30rpx 40rpx;
  line-height: 1.8;
  color: #333;
}

/* Markdown 样式最佳实践 */
.article-rich-text {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.article-rich-text h1, 
.article-rich-text h2, 
.article-rich-text h3, 
.article-rich-text h4, 
.article-rich-text h5, 
.article-rich-text h6 {
  font-weight: 600;
  line-height: 1.25;
  margin-top: 1.5em;
  margin-bottom: 1em;
  display: block;
}

.article-rich-text h1 { font-size: 48rpx; border-bottom: 1rpx solid #eee; padding-bottom: 0.3em; }
.article-rich-text h2 { font-size: 40rpx; border-bottom: 1rpx solid #eee; padding-bottom: 0.3em; }
.article-rich-text h3 { font-size: 34rpx; }
.article-rich-text h4 { font-size: 30rpx; }

.article-rich-text p {
  margin-top: 0;
  margin-bottom: 1em;
  display: block;
  font-size: 30rpx;
  text-align: justify;
}

.article-rich-text strong {
  font-weight: 600;
}

.article-rich-text em {
  font-style: italic;
}

.article-rich-text blockquote {
  padding: 0 1em;
  color: #6a737d;
  border-left: 0.25em solid #dfe2e5;
  margin: 1em 0;
  display: block;
}

.article-rich-text ul, 
.article-rich-text ol {
  padding-left: 2em;
  margin-bottom: 1em;
  display: block;
}

.article-rich-text li {
  display: list-item;
  margin: 0.25em 0;
}

.article-rich-text code {
  padding: 0.2em 0.4em;
  margin: 0;
  font-size: 85%;
  background-color: rgba(27,31,35,0.05);
  border-radius: 6rpx;
  font-family: SFMono-Regular, Consolas, "Liberation Mono", Menlo, monospace;
}

.article-rich-text pre {
  padding: 16rpx;
  overflow: auto;
  font-size: 85%;
  line-height: 1.45;
  background-color: #f6f8fa;
  border-radius: 6rpx;
  margin-bottom: 1em;
  display: block;
}

.article-rich-text pre code {
  background-color: transparent;
  padding: 0;
  display: block;
  white-space: pre;
}

.article-rich-text hr {
  height: 0.25em;
  padding: 0;
  margin: 24rpx 0;
  background-color: #e1e4e8;
  border: 0;
  display: block;
}

.article-rich-text img {
  max-width: 100%;
  box-sizing: content-box;
  background-color: #fff;
}
